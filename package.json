{
  "name": "typescript-sass-esbuild-template",
  "version": "1.0.0",
  "description": "quickstart template for projects utilizing typescript + sass + esbuild",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist",
    "start": "run-p \"build:* -- --watch\"",
    "build": "run-s build:*",
    "build:tsc": "tsc --noEmit",
    "build:esbuild": "node ./scripts/build.js"
  },
  "author": "grcekh gracekimhoward@gmail.com",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^17.0.10",
    "esbuild": "^0.14.12",
    "esbuild-sass-plugin": "^2.0.3",
    "npm-run-all": "^4.1.5",
    "servor": "^4.0.2",
    "typescript": "^4.5.5"
  }
}
